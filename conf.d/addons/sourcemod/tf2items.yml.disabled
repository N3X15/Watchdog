addons:
  tf2items:
    addon: sourcepawn
    dependencies:
      - sourcemod
    strip-ndirs:   1
    repo:
      type:          amsnapshot
      drop-format:   'http://dedi.nexisonline.net/drop/sourcemod-tf2items/'
      drop-regex:    'sourcemod-tf2items-git(?P<build>[0-9]+)-(?P<os>linux)\.[a-z\.]+'
      version-group: ''
      quiet: false
    exts:
      items.txt: gamedata
