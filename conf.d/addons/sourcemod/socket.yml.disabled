addons:
  socket:
    addon: sourcepawn
    dependencies:
      - sourcemod
    exclude-dirs: ['.git', '.hg', '.svn', 'examples']
    repo:
      type:          amsnapshot
      drop-format:   'http://dedi.nexisonline.net/drop/socket/'
      drop-regex:    'socket-git(?P<build>[0-9]+)-(?P<os>linux)\.[a-z\.]+'
      version-group: ''
      quiet: false