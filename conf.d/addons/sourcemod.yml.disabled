addons:
  sourcemod:
    addon: source-addon
    dependencies:
      - metamod
    metamod-target: "addons/sourcemod/bin/sourcemod_mm"
    repo:
      type: amsnapshot
      drop-format:   'http://www.sourcemod.net/smdrop/{VERSION}/'
      drop-regex:    'sourcemod-(?P<version>[0-9\.]+)-git(?P<build>[0-9]+)-(?P<os>windows|linux|mac)\.[a-z\.]+'
      version-group: '1.8'
      skip-dirs:
        - sourcemod/configs
